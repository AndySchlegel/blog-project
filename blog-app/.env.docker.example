# MongoDB Connection f체r Docker Deployment
# Passe dies an deine Synology/Production MongoDB Konfiguration an
MONGODB_URI=mongodb://your-mongodb-host:27017/blog-production

# JWT Secret f체r Production
# WICHTIG: Nutze einen starken, zuf채lligen String!
# Generierung: openssl rand -base64 32
JWT_SECRET=your-production-secret-here

# Cookie Security f체r Production
# false wenn hinter nginx ohne HTTPS
# true wenn direktes HTTPS
AUTH_COOKIE_SECURE=false

# Node Environment
NODE_ENV=production

# Website Password Protection
# Password that visitors need to enter to access the site
SITE_ACCESS_PASSWORD=your-site-password-here
# Secret token for cookie validation (generate with: openssl rand -hex 32)
SITE_ACCESS_SECRET=your-secret-token-here
